{
    "Data": {
        "PhotoGalleryConnection": {
            "ConnectionString": "Data Source=./webapp.db"
        }
    },
    "Logging": {
        "IncludeScopes": false,
        "LogLevel": {
            "Default": "Verbose",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Literate",
            "Serilog.Sinks.RollingFile"
        ],
        "MinimumLevel": "Debug",
        "WriteTo": [
            {
                "Name": "LiterateConsole"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "%LOG_DIR%//serilog.log"                   
                }
            }
        ],
        "Enrich": [
            "WithMachineName",
            "WithThreadId"
        ],
        "Properties": {
            "Application": "Photos"
        }
    }
}